# Production Environment Variables Template
# Copy to .env.production and fill in actual values for Railway deployment

DEBUG=False

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Redis (Railway Redis)
REDIS_URL=redis://default:password@host:port
REDIS_HOST=host
REDIS_PORT=port
REDIS_DB=0
REDIS_PASSWORD=password

# Security (CHANGE THESE!)
SECRET_KEY=your-super-secret-key-minimum-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email Configuration (Production)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@gmail.com
SMTP_PASSWORD=your-production-app-password
FROM_EMAIL=your-production-email@gmail.com
FROM_NAME=Default Rate Prediction

# CORS (Production domains)
CORS_ORIGIN=https://your-frontend-domain.com

# Server (Railway sets this automatically)
PORT=8000

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
