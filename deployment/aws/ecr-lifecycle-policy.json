{
  "rules": [
    {
      "rulePriority": 1,
      "description": "Keep only the 7 most recent tagged images",
      "selection": {
        "tagStatus": "tagged",
        "tagPrefixList": ["prod-", "latest"],
        "countType": "imageCountMoreThan",
        "countNumber": 7
      },
      "action": {
        "type": "expire"
      }
    },
    {
      "rulePriority": 2,
      "description": "Delete untagged images older than 1 day",
      "selection": {
        "tagStatus": "untagged",
        "countType": "sinceImagePushed",
        "countUnit": "days",
        "countNumber": 1
      },
      "action": {
        "type": "expire"
      }
    }
  ]
}
