# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/default_rate_db

# Redis Configuration (for FastAPI-Users sessions and caching)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# FastAPI-Users Configuration
VERIFICATION_TOKEN_SECRET=verification-secret-key-here
RESET_PASSWORD_TOKEN_SECRET=reset-password-secret-key-here

# Email Service Configuration
# Using Brevo (9,000 emails/month free)
EMAIL_SERVICE=brevo
# Alternative: Resend (3,000 emails/month free)
# EMAIL_SERVICE=resend
# RESEND_API_KEY=your-resend-api-key-here

# Email Settings
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Default Rate Prediction System

# Application Configuration
APP_NAME=Default Rate Prediction System
APP_VERSION=1.0.0
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Invitation Settings
INVITATION_EXPIRE_HOURS=72
BASE_URL=https://yourdomain.com

# ML Model Configuration
MODEL_PATH=./models/
ENABLE_ML_CACHE=true

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Performance Settings
ENABLE_REDIS_CACHE=true
CACHE_TTL_SECONDS=3600

# Organization Settings
MAX_ORGANIZATIONS_PER_USER=5
DEFAULT_ORGANIZATION_ROLE=member

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=1440  # 24 hours

# Server Configuration
PORT=8000
