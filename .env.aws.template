# AccuNode AWS Production Environment Template
# Copy this to .env in production and fill in the actual values

# Application Settings
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4

# AWS Configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Database Configuration (RDS PostgreSQL)
DATABASE_URL=postgresql://accunode_user:CHANGE_ME@accunode-db.xxx.us-east-1.rds.amazonaws.com:5432/accunode_prod

# Redis Configuration (ElastiCache)
REDIS_URL=redis://accunode-redis.xxx.cache.amazonaws.com:6379/0

# Security Secrets (Store in AWS Parameter Store)
SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING
JWT_SECRET=CHANGE_ME_TO_RANDOM_JWT_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
S3_BUCKET=accunode-ml-models

# Logging
LOG_LEVEL=WARNING

# Auto-scaling Settings
AUTO_SCALING_ENABLED=true
MAX_WORKERS=6
MIN_WORKERS=2

# Health Check Settings
HEALTH_CHECK_TIMEOUT=5

# CORS Origins (Add your frontend domains)
CORS_ORIGINS=["https://api.yourdomain.com", "https://yourdomain.com"]

# Performance Settings
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
